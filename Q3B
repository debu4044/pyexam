import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
from sklearn.linear_model import LogisticRegression
from sklearn.metrics import accuracy_score

# Task 1: Data Preparation
x = np.array([1, 2, 3, 4, 5]).reshape(-1, 1)  # Independent variable
y = np.array([0, 0, 0, 1, 1])  # Dependent variable (binary)
plt.scatter(x, y)
plt.title("Data Visualization")
plt.xlabel("X-axis")
plt.ylabel("Y-axis")
plt.show()

# Task 2: Train the Logistic Regression Model
model = LogisticRegression()
model.fit(x, y)
print("Intercept:", model.intercept_, "Coefficient:", model.coef_)

# Task 3: Predictions and Evaluation
y_pred = model.predict(x)
accuracy = accuracy_score(y, y_pred)
print("Accuracy:", accuracy)

# Task 4: Visualizing Logistic Regression Curve
x_vals = np.linspace(0, 6, 100).reshape(-1, 1)
y_probs = model.predict_proba(x_vals)[:, 1]
plt.scatter(x, y, color='blue')
plt.plot(x_vals, y_probs, color='red')
plt.title("Logistic Regression Curve")
plt.xlabel("X-axis")
plt.ylabel("Probability")
plt.show()
